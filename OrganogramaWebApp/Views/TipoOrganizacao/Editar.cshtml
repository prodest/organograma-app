@model ProcessoEletronicoWebApp.Apresentacao.Models.TelaTipoOrganizacao


@using (Ajax.BeginForm("Editar", "TipoOrganizacao",
                                            new AjaxOptions
                                            {
                                                HttpMethod = "POST",
                                                InsertionMode = InsertionMode.Replace,
                                                UpdateTargetId = "update",
                                                OnSuccess = "onSuccessTipoOrganizacao"
                                            },
                                            new { @id = "formEditarTipoOrganizacao" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.tipoOrganizacao.id)    

    <div class="form-group">
        @Html.LabelFor(model => model.tipoOrganizacao.descricao, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.tipoOrganizacao.descricao, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.tipoOrganizacao.descricao, "", new { @class = "text-danger" })
    </div>

    <div class="form-group text-right">        
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Fechar</button>
        <button type="submit" class="btn btn-danger"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</button>
    </div>
}