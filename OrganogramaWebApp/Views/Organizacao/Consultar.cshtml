@model OrganogramaApp.Apresentacao.ViewModel.OrganizacaoVisualizacaoViewModel

<div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th class="text-right col-md-2">
                    @Html.DisplayNameFor(model => model.razaoSocial)
                </th>
                <td>
                    @Html.DisplayFor(model => model.razaoSocial)
                </td>
            </tr>

            <tr>
                <th class="text-right col-md-2">
                    @Html.DisplayNameFor(model => model.cnpj)
                </th>
                <td>                    
                    @Convert.ToUInt64(Model.cnpj).ToString(@"00\.000\.000\/0000\-00")
                </td>
            </tr>

            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.sigla)
                </th>
                <td>
                    @Html.DisplayFor(model => model.sigla)
                </td>
            </tr>

            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.tipoOrganizacao)
                </th>
                <td>
                    @Html.DisplayFor(model => model.tipoOrganizacao.descricao)
                </td>
            </tr>            

            @if (Model.organizacaoPai != null)
            {
                <tr>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.organizacaoPai)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.organizacaoPai.sigla) - @Html.DisplayFor(model => model.organizacaoPai.razaoSocial)
                    </td>
                </tr>
            }

            @if (Model.endereco != null)
            {
                <tr>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.endereco)
                    </th>
                    <td>
                        <dl class="dl-horizontal">
                            <dt>Logradouro</dt>
                            <dd>@Html.DisplayFor(model => model.endereco.logradouro)</dd>
                            <dt>Número</dt>
                            <dd>@Html.DisplayFor(model => model.endereco.numero)</dd>
                            <dt>Complmento</dt>
                            <dd>@Html.DisplayFor(model => model.endereco.complemento)</dd>
                            <dt>Bairro</dt>
                            <dd>@Html.DisplayFor(model => model.endereco.bairro)</dd>
                            <dt>CEP</dt>
                            <dd>@Convert.ToUInt64(Model.endereco.cep).ToString(@"00000\-000")</dd>
                            @*<dt>Municipio</dt>
                            <dd>@Html.DisplayFor(model => model.endereco.municipio.Nome)</dd>
                            <dt>Estado</dt>
                            <dd>@Html.DisplayFor(model => model.endereco.municipio.uf)</dd>*@
                        </dl>
                    </td>
                </tr>
            }

            @if (Model.contatos != null)
            {
                <tr>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.contatos)
                    </th>
                    <td>
                        @foreach (var item in Model.contatos)
                        {
                            <dl>
                                <dt>Telefone</dt>
                                <dd>@item.telefone</dd>
                            </dl>
                        }
                    </td>
                </tr>
            }

            @if (Model.emails != null)
            {
                <tr>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.emails)
                    </th>
                    <td>
                        @foreach (var item in Model.emails)
                        {
                            <dl>
                                <dt>Endereço</dt>
                                <dd>@item.endereco</dd>
                            </dl>
                        }
                    </td>
                </tr>
            }

            @if (Model.sites != null)
            {
                <tr>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.sites)
                    </th>
                    <td>
                        @foreach (var item in Model.sites)
                        {
                            <dl>
                                <dt>Url</dt>
                                <dd><a href="@item.url" title="@item.url" target="_blank">@item.url</a></dd>
                            </dl>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>