@model OrganogramaApp.Apresentacao.Models.TelaTipoUnidade

@using (Html.BeginForm("Excluir", "TipoUnidade", FormMethod.Get, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(model => model.tipoUnidade.id)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tipoUnidade.id):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tipoUnidade.id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.tipoUnidade.descricao):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tipoUnidade.descricao)
        </dd>
    </dl>

    <div class="form-group text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Fechar</button>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Excluir</button>
    </div>
}